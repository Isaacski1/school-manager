# Example .env file
# Copy this to .env and fill in your Firebase credentials

PORT=3001

# Your Firebase Project ID
FIREBASE_PROJECT_ID=noble-care-management-system

# Service Account Key JSON (from Firebase Console)
# Go to: Firebase Console → ⚙️ Settings → Service Accounts → Generate New Private Key
# Then paste the entire JSON content here (on a single line)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"noble-care-management-system","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-...@noble-care-management-system.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Paystack
PAYSTACK_SECRET_KEY=
PAYSTACK_PLAN_CODE=
PAYSTACK_CALLBACK_URL=

# Frontend (Vite)
VITE_PAYSTACK_PUBLIC_KEY=
